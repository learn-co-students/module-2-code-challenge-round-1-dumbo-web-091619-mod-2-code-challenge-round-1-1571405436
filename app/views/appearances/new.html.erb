<h1>New Appearance</h1>
<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select(:guest_id, Guest.all, :id, :name, prompt: true) %> <br>

    <%= f.label :episode_id %>
    <%= f.collection_select(:episode_id, Episode.all, :id, :date, prompt: true) %> <br>

    <%= f.label :rating, "Rate the Guest" %> 
    <%= f.number_field :rating %> <br>

    <%= f.submit %>
<% end %>