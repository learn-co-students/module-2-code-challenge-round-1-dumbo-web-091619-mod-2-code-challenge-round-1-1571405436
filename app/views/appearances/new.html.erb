<h1>Form for New Appearances</h1>

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guests, :id, :name, :prompt => "Select a guest" %>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episodes, :id, :number, :prompt => "Select an episode" %>
    <%= f.label :rating %>
    <%= f.number_field :rating, min: 1, max: 5 %>
    <%= f.submit %>
<% end %>