<%= form_for @appearance do |f|%>

  <% if flash[:error] %>
    <p style="color:red;"><%= flash[:error] %></p>
  <% end %>

  <%= f.label :raiting%>
  <%= f.text_field :raiting%>

  <%= f.label :guest_id%>
  <%= f.collection_select :guest_id, @guests, :id, :name%>

  <%= f.label :episode_id%>
  <%= f.collection_select :episode_id, @episodes, :id, :number%>
  <%= f.submit%>
<% end %>

<p><%= link_to "Back to list of all episodes", episodes_path %></p>
<p><%= link_to "Back to list of all guests", guests_path %></p>