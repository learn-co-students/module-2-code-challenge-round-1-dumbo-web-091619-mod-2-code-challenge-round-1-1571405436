<h1> New Appearance</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%= form_for @signup do |f| %>
  <%= f.label :guest_rating %>
  <%= f.number_field :guest_rating %>
  <%= f.label :guest_id %>
  <%= f.collection_select :guest_id, @guests, :id, :name %>
  <%= f.label :episode_id %>
  <%= f.collection_select :episode_id, @episodes, :id, :date %>
  <%= f.submit %>
<% end %>
