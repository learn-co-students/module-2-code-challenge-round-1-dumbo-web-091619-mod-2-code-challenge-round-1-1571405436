<% if flash[:error] %>
  <%= content_tag :h1, flash[:error] %>
<% end %>

<%= form_for @apperance do |f| %>
  <%= f.label :guest %>
  <%= f.collection_select :guest_id, @guests, :id, :name %><br />
  <%= f.label :episode %>
  <%= f.collection_select :episode_id, @episodes, :id, :number %><br />
  <%= f.label :rating %>
  <%= f.select :guest_rating, 1..5 %></br>
  <%= f.submit %>
<% end %>