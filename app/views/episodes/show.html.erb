<h1>The Daily Show Episode Number <%= @episode.number %></h1>
<br>
Air Date: <%= @episode.date %>
<br>
Guests:
<br>

<% if @episode.guests.length == 0 %>
	This Episode featured no guests
<% else %>
	<% @episode.guests.each { |guest| %>
		<%= link_to guest.name, guest_path(guest) %>
		<br>
	<% } %>
<% end %>
