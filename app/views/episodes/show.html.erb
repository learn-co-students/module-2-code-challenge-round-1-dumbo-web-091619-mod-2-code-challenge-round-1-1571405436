<% if flash[:notice] %>
<p style="color:limegreen"><%= flash[:notice] %></p>
<% end %>
<h1>Date: <%= @episode.date %></h1>
<h2>Number: <%= @episode.number %></h2>
<h3>Guests:</h3>
<% if @episode.guests.empty? %>
<p>This episode doesn't have any guests!</p>
<% else %>
<ul>
    <% @episode.guests.uniq.map do |guest| %>
    <li>
        <%= link_to guest.name, guest %>
    </li>
    <% end %>
</ul>
<% end %>